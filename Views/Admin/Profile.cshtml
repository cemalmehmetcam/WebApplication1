@model WebApplication1.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Profilim</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Şifre Değiştir</li>
    </ol>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">@TempData["success"]</div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-user-lock me-1"></i>
                    Şifre Güncelleme
                </div>
                <div class="card-body">
                    <form asp-action="Profile" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label fw-bold"></label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="Mevcut şifrenizi giriniz" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-bold"></label>
                            <input asp-for="NewPassword" class="form-control" placeholder="Yeni şifrenizi giriniz" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Yeni şifrenizi tekrar giriniz" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Değişiklikleri Kaydet
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="fas fa-info-circle"></i> Bilgilendirme</h5>
                    <p class="card-text">
                        Güvenliğiniz için şifrenizi belirli aralıklarla değiştirmeniz önerilir.
                        Şifrenizi değiştirdikten sonra bir sonraki girişinizde yeni şifrenizi kullanmanız gerekecektir.
                    </p>
                    <hr />
                    <p class="mb-0 text-muted">
                        <strong>Giriş Yapılan Mail:</strong> @User.Identity.Name
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}