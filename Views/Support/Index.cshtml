@model List<WebApplication1.Models.SupportTicket>
@{
    ViewData["Title"] = "Mesajlarım";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-envelope-open-text text-primary"></i> Destek Taleplerim</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill"><i class="fas fa-plus"></i> Yeni Talep</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-light text-center shadow-sm">Henüz bir mesajınız yok.</div>
    }
    else
    {
        <div class="list-group shadow-sm">
            @foreach (var item in Model)
            {
                <div class="list-group-item list-group-item-action p-4 mb-2 border rounded">
                    <div class="d-flex w-100 justify-content-between mb-2">
                        <h5 class="mb-1 text-primary fw-bold">@item.Subject</h5>
                        <small>@item.CreatedDate.ToString("dd MMM yyyy HH:mm")</small>
                    </div>

                    <p class="mb-3 text-dark">@item.Message</p>

                    @if (!string.IsNullOrEmpty(item.AdminResponse))
                    {
                        <div class="alert alert-success mb-0 border-0">
                            <i class="fas fa-user-shield me-2"></i> <strong>Admin Cevabı:</strong> <br>
                            @item.AdminResponse
                        </div>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark"><i class="fas fa-clock"></i> Cevap Bekleniyor</span>
                    }
                </div>
            }
        </div>
    }
</div>