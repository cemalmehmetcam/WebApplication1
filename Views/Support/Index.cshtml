@model List<WebApplication1.Models.SupportTicket>
@{
    ViewData["Title"] = "Destek Taleplerim";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Destek Taleplerim</h2>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Yeni Talep</a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-light"><tr><th>Konu</th><th>Durum</th><th>Tarih</th></tr></thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Subject <br> <small class="text-muted">@item.Message</small></td>
                    <td><span class="badge @(item.Status == "Beklemede" ? "bg-warning" : "bg-success")">@item.Status</span></td>
                    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>