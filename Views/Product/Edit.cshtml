@model WebApplication1.Models.Product

@{
    ViewData["Title"] = "Ürün Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Ürün Düzenle</h1>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageUrl" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Ürün Adı</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">Kategori</label>
                                <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
                                    <option disabled>-- Kategori Seçiniz --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Fiyat</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Yeni Resim (Opsiyonel)</label>
                            <input type="file" name="file" class="form-control" />
                            <small class="text-muted">Resim değiştirmek istemiyorsanız boş bırakın.</small>
                        </div>
                    </div>

                    <div class="col-md-4 d-flex justify-content-center align-items-start">
                        <div class="card p-2 shadow-sm">
                            <p class="text-center mb-2 fw-bold">Mevcut Resim</p>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" width="100%" style="border-radius: 5px; max-height:300px; object-fit:contain;" />
                            }
                            else
                            {
                                <div class="text-center p-5 bg-light text-muted">Resim Yok</div>
                            }
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-warning w-100 text-white">
                        <i class="fas fa-sync-alt"></i> Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-secondary w-100 mt-2">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>