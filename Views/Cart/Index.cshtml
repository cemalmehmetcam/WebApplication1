@model List<WebApplication1.Models.CartItem>

@{
    ViewData["Title"] = "Sepetim";
    decimal totalAmount = Model.Sum(x => x.Quantity * x.Product.Price);
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <h2 class="mb-4 fw-bold">Sepetim (@Model.Count Ürün)</h2>

            @if (Model.Count > 0)
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Ürün</th>
                                        <th>Fiyat</th>
                                        <th>Adet</th>
                                        <th>Toplam</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3" style="width: 60px; height: 60px;">
                                                        @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                                                        {
                                                            <img src="@item.Product.ImageUrl" class="img-fluid rounded" style="width: 100%; height: 100%; object-fit: contain;" />
                                                        }
                                                        else
                                                        {
                                                            <div class="bg-light w-100 h-100 d-flex align-items-center justify-content-center rounded text-muted">
                                                                <i class="fas fa-camera"></i>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0 text-dark">@item.Product.Name</h6>
                                                        <small class="text-muted">@item.Product.Category?.Name</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.Product.Price.ToString("C2")</td>
                                            <td>
                                                <span class="badge bg-light text-dark border">@item.Quantity</span>
                                            </td>
                                            <td class="fw-bold text-primary">@((item.Quantity * item.Product.Price).ToString("C2"))</td>
                                            <td class="text-end pe-4">
                                                <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm rounded-circle">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-white rounded shadow-sm">
                    <i class="fas fa-shopping-basket fa-4x text-muted mb-3"></i>
                    <h3>Sepetiniz Boş</h3>
                    <p class="text-muted">Henüz sepetinize ürün eklemediniz.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-3 rounded-pill px-4">Alışverişe Başla</a>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Sipariş Özeti</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Ara Toplam</span>
                        <span>@totalAmount.ToString("C2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Kargo</span>
                        <span class="text-success fw-bold">Ücretsiz</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="fw-bold h5">Genel Toplam</span>
                        <span class="fw-bold h5 text-primary">@totalAmount.ToString("C2")</span>
                    </div>

                    @if (Model.Count > 0)
                    {
                        <div class="d-grid">
                            <a asp-controller="Order" asp-action="Checkout" class="btn btn-primary btn-lg rounded-pill">Siparişi Tamamla</a>
                        </div>
                    }
                    <div class="d-grid mt-2">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary rounded-pill">Alışverişe Devam Et</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>