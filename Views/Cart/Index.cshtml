@model List<WebApplication1.Models.CartItem>

@{
    ViewData["Title"] = "Sepetim";
    decimal totalAmount = Model.Sum(x => x.Quantity * x.Product.Price);
}

<div class="container mt-5">
    <h2>Sepetim</h2>

    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Ürün</th>
                    <th>Fiyat</th>
                    <th>Adet</th>
                    <th>Toplam</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price.ToString("C2")</td>
                        <td>@item.Quantity</td>
                        <td>@((item.Quantity * item.Product.Price).ToString("C2"))</td>
                        <td>
                            <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right font-weight-bold">Genel Toplam:</td>
                    <td colspan="2" class="font-weight-bold text-success">@totalAmount.ToString("C2")</td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Alışverişe Devam Et</a>

            <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Siparişi Tamamla</a>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Sepetinizde henüz ürün bulunmamaktadır. <a asp-controller="Product" asp-action="Index">Alışverişe başla!</a>
        </div>
    }
</div>