@model List<WebApplication1.Models.Order>

@{
    ViewData["Title"] = "Siparişlerim";
}

<div class="container py-5">
    <h2 class="mb-4 fw-bold"><i class="fas fa-box-open me-2 text-primary"></i>Geçmiş Siparişlerim</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info shadow-sm border-0">
            <i class="fas fa-info-circle me-2"></i> Henüz bir siparişiniz bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="accordion shadow-sm" id="ordersAccordion">
            @foreach (var order in Model)
            {
                <div class="accordion-item border-0 mb-3 rounded overflow-hidden">
                    <h2 class="accordion-header" id="heading-@order.Id">
                        <button class="accordion-button @(order != Model.First() ? "collapsed" : "") bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@order.Id">
                            <div class="d-flex justify-content-between w-100 align-items-center me-3">
                                <div>
                                    <strong>Sipariş #@order.Id</strong>
                                    <span class="text-muted ms-2 small"><i class="far fa-clock me-1"></i>@order.OrderDate.ToString("dd MMMM yyyy HH:mm")</span>
                                </div>
                                <div>
                                    @{
                                        var badgeColor = order.OrderStatus switch
                                        {
                                            "Hazırlanıyor" => "bg-warning text-dark",
                                            "Kargolandı" => "bg-primary",
                                            "Teslim Edildi" => "bg-success",
                                            "İptal Edildi" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeColor rounded-pill me-3">@order.OrderStatus</span>
                                    <span class="fw-bold text-dark">@order.TotalAmount.ToString("C2")</span>
                                </div>
                            </div>
                        </button>
                    </h2>
                    <div id="collapse-@order.Id" class="accordion-collapse collapse @(order == Model.First() ? "show" : "")" data-bs-parent="#ordersAccordion">
                        <div class="accordion-body bg-light">
                            <div class="table-responsive">
                                <table class="table table-sm table-borderless mb-0">
                                    <thead class="text-muted border-bottom">
                                        <tr>
                                            <th>Ürün</th>
                                            <th class="text-center">Adet</th>
                                            <th class="text-end">Birim Fiyat</th>
                                            <th class="text-end">Tutar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in order.OrderItems)
                                        {
                                            <tr>
                                                <td>@item.Product.Name</td>
                                                <td class="text-center">x @item.Quantity</td>
                                                <td class="text-end">@item.UnitPrice.ToString("C2")</td>
                                                <td class="text-end fw-bold">@((item.UnitPrice * item.Quantity).ToString("C2"))</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>