@model List<WebApplication1.Models.Order>

@{
    ViewData["Title"] = "Siparişlerim";
}

<div class="container mt-4">
    <h2>Geçmiş Siparişlerim</h2>
    @if (Model.Count == 0)
    {
        <div class="alert alert-warning">Henüz bir siparişiniz bulunmamaktadır.</div>
    }
    else
    {
        <div class="accordion" id="ordersAccordion">
            @foreach (var order in Model)
            {
                <div class="card mb-3">
                    <div class="card-header bg-light" id="heading-@order.Id">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>
                                <strong>Sipariş No:</strong> #@order.Id <br />
                                <small>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</small>
                            </span>
                            <span class="badge bg-info text-dark">@order.OrderStatus</span>
                            <span class="font-weight-bold text-success">@order.TotalAmount.ToString("C")</span>
                        </div>
                    </div>

                    <div id="collapse-@order.Id" class="collapse show">
                        <div class="card-body">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Ürün</th>
                                        <th>Fiyat</th>
                                        <th>Adet</th>
                                        <th>Tutar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in order.OrderItems)
                                    {
                                        <tr>
                                            <td>@item.Product.Name</td>
                                            <td>@item.UnitPrice.ToString("C")</td>
                                            <td>@item.Quantity</td>
                                            <td>@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>