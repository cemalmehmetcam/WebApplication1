@model List<WebApplication1.Models.CartItem>

@{
    ViewData["Title"] = "Siparişi Tamamla";
    decimal total = Model.Sum(x => x.Quantity * x.Product.Price);
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h4>Sipariş Özeti</h4>
            <ul class="list-group mb-3">
                @foreach (var item in Model)
                {
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">@item.Product.Name</h6>
                            <small class="text-muted">Adet: @item.Quantity</small>
                        </div>
                        <span class="text-muted">@((item.Quantity * item.Product.Price).ToString("C"))</span>
                    </li>
                }
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <span class="text-success">Toplam Tutar (TL)</span>
                    <strong class="text-success">@total.ToString("C")</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-4">
            <h4 class="mb-3">Teslimat Bilgileri</h4>
            <form asp-action="Checkout" method="post">
                <div class="mb-3">
                    <label for="address">Adres</label>
                    <textarea class="form-control" id="address" name="address" rows="3" required placeholder="Adresinizi giriniz..."></textarea>
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block w-100" type="submit">Siparişi Onayla</button>
            </form>
        </div>
    </div>
</div>